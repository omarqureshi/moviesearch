<h1>Movies</h1>

<div class="search">
  <%= form_tag movies_path, :method => :get do %>
  <%= search_field_tag :q, params[:q] %>
  <%= submit_tag "Search" %>
  <% end %>
</div>

<ul>
  <% @movies.each do |movie| %>
  <li><%= link_to movie.presentation_title, movie %></li>
  <% end %>
</ul>

<%= paginate @movies %>
